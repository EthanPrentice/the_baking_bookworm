<!-- posts -->
<div class="page-wrap">
  <div class="wrap">

    {{#each posts}}
      <div class="box">
        <div class="panel">

          <img src={{ content.image }}></img>

          <div class="title">
            <h1>{{ title }}</h1>
            <h2>{{ content.author }}</h2>
          </div>

          <div class="content">
            <p> {{{ content.desc }}}</p>
          </div>

          <div class="button"><a href={{ url }}>Read</a></div>
          <span class="labels">
            {{#each labels}}
              <a href="http://thebakingbookworm.blogspot.com/search/label/{{ this }}">{{ this }}</a>
            {{/each}}
          </span>

        </div>
      </div>
    {{/each}}

    <div class="clear"></div>

  </div>
</div>
